{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "plugin:react/jsx-runtime"
  ],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "rules": {
    "max-len": ["error", 140],
    "react/jsx-filename-extension": [1, { "extensions": ["tsx"] }],
    "quotes": [2, "single"]
  }
}
