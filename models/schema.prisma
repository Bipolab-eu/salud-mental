datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model Test {
  id        BigInt   @id @unique @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  edad      Int
  genero    String
  test      Json?    @db.JsonB
  centroId  BigInt   @map("centro_id")
  codigoId  BigInt   @map("codigo_id")
  centro    Centro   @relation(fields: [centroId], references: [id])
  codigo    Codigo   @relation(fields: [codigoId], references: [id])

  @@schema("public")
}

model Centro {
  id                  BigInt   @id @unique
  nombre              String
  direccion           String
  municipio           String
  codigoPostal        BigInt   @map("codigo_postal")
  coordenadas         Json     @db.Json
  tests               Test[]
  codigos_registrados Codigo[]

  @@schema("public")
}

model Codigo {
  id        BigInt   @id @unique
  uso       Int?     @default(0)
  codigo    String   @unique
  centroId  BigInt   @map("centro_id")
  centro    Centro   @relation(fields: [centroId], references: [id])
  createtAd DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  Test      Test[]

  @@schema("public")
}

model User {
  id       Int    @id
  centroId BigInt @map("centro_id")

  @@schema("auth")
}
